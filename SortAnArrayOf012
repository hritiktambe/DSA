
/*
https://leetcode.com/problems/sort-colors/

In this problem 3 pointers are used l,m,h
l initialised to zero ,m initialised to zero ,h to n-1
l will keep track 

*/

void sortColors(vector<int> &num)
{
	int n = num.size();
	int l=0,m=0,h=n-1;

	while(m<h)
	{
		if(nums[m]==0)
		{
			swap(nums[m],nums[l]);
			l++;
			m++;
		}
		else if(nums[m]==2)
		{
			swap(nums[m],nums[h]);
			h--;
		}
		else
		m++;
	}
}

